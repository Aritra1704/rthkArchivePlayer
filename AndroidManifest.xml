<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hei.android.app.rthkArchivePlayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:label="@string/app_name" 
        android:name=".RthkArchivePlayerApplication" android:icon="@drawable/icon">
        <activity
            android:label="@string/app_name"
            android:name=".AsxActivity" 
            android:launchMode="singleTop" 
            android:theme="@style/Theme.GreenDroid.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="http" android:mimeType="video/x-ms-asf" />
            </intent-filter>
            <!-- <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter> -->
        </activity>
        <activity 
            android:label="@string/app_name"
            android:name=".SearchActivity"
            android:theme="@style/Theme.GreenDroid.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProgrammeActivity"
            android:theme="@style/Theme.GreenDroid.NoTitleBar"></activity>
        <activity android:name=".PlayerActivity"
            android:theme="@style/Theme.GreenDroid.NoTitleBar"></activity>
    </application>

</manifest>