<?xml version="1.0" encoding="utf-8"?>
<com.hei.android.app.rthkArchivePlayer.widget.EpisodeItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

	<TextView
		android:id="@+id/episode_item_text"
		
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		
		android:singleLine="true"
		android:gravity="center_vertical" />
	
	<ImageView
		android:id="@+id/episode_item_download"
		android:layout_gravity="center_vertical" 
		android:src="@drawable/episode_item_download"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:contentDescription="@string/episode_item_download_description"/>
	
</com.hei.android.app.rthkArchivePlayer.widget.EpisodeItemView>